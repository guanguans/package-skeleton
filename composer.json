{
    "name": "guanguans/package-skeleton",
    "description": "A PHP package template repository. - 一个PHP软件包模板存储库。",
    "keywords": [
        "package",
        "template",
        "PHP",
        "skeleton"
    ],
    "homepage": "https://github.com/guanguans/package-skeleton",
    "support": {
        "issues": "https://github.com/guanguans/package-skeleton/issues",
        "source": "https://github.com/guanguans/package-skeleton"
    },
    "authors": [
        {
            "name": "guanguans",
            "email": "ityaozm@gmail.com",
            "homepage": "https://www.guanguans.cn",
            "role": "developer"
        }
    ],
    "type": "library",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "vimeo/psalm": "^3.11",
        "mockery/mockery": "^1.2",
        "brainmaestro/composer-git-hooks": "^2.7",
        "phpunit/phpunit": "^7 || ^8"
    },
    "autoload": {
        "psr-4": {
            "Guanguans\\PackageSkeleton\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Guanguans\\PackageSkeleton\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    },
    "funding": [
        {
            "type": "wechat",
            "url": "https://www.guanguans.cn/images/wechat.jpeg"
        }
    ],
    "extra": {
        "hooks": {
            "pre-commit": [
                "composer test",
                "composer check-style",
                "composer lint-md"
            ],
            "pre-push": [
                "composer test",
                "composer check-style",
                "composer lint-md"
            ]
        }
    },
    "scripts": {
        "post-update-cmd": [
            "cghooks update"
        ],
        "post-merge": "composer install",
        "post-install-cmd": [
            "cghooks add --ignore-lock",
            "cghooks update"
        ],
        "cghooks": "./vendor/bin/cghooks",
        "lint-md": "lint-md --config .lintmdrc *.md .github/*.md .github/ISSUE_TEMPLATE/*.md",
        "fix-md": "lint-md --config .lintmdrc --fix *.md .github/*.md .github/ISSUE_TEMPLATE/*.md",
        "check-style": "php-cs-fixer fix --using-cache=no --diff --config=.php_cs.dist --dry-run --ansi",
        "fix-style": "php-cs-fixer fix --using-cache=no --config=.php_cs.dist --ansi",
        "psalm": "./vendor/bin/psalm",
        "test": "./vendor/bin/phpunit --coverage-text --colors=always --verbose",
        "test-coverage": "./vendor/bin/phpunit --coverage-html=coverage/ --coverage-clover=clover.xml --color=always --verbose"
    },
    "scripts-descriptions": {
        "cghooks": "Run git cghooks.",
        "lint-md": "Run markdown checks.",
        "fix-md": "Run markdown fixing.",
        "check-style": "Run style checks (only dry run - no fixing!).",
        "fix-style": "Run style checks and fix violations.",
        "psalm": "Run psalm checks.",
        "test": "Run all tests.",
        "test-coverage": "Run all tests with coverage."
    }
}
