{
    "name": "guanguans/package-skeleton",
    "description": "A PHP package template repository. - 一个PHP软件包模板存储库。",
    "type": "library",
    "keywords": [
        "package",
        "template",
        "PHP",
        "skeleton"
    ],
    "homepage": "https://github.com/guanguans/package-skeleton",
    "readme": "README.md",
    "license": "MIT",
    "authors": [
        {
            "name": "guanguans",
            "email": "ityaozm@gmail.com",
            "homepage": "https://www.guanguans.cn",
            "role": "developer"
        }
    ],
    "support": {
        "issues": "https://github.com/guanguans/package-skeleton/issues",
        "source": "https://github.com/guanguans/package-skeleton"
    },
    "funding": [
        {
            "type": "wechat",
            "url": "https://www.guanguans.cn/images/wechat.jpeg"
        }
    ],
    "require": {
        "php": ">=7.3"
    },
    "require-dev": {
        "brainmaestro/composer-git-hooks": "^2.8",
        "brianium/paratest": "^6.0",
        "code-lts/doctum": "^5.4",
        "codedungeon/phpunit-result-printer": "^0.31 || ^0.32",
        "dg/bypass-finals": "^1.3",
        "dms/phpunit-arraysubset-asserts": "^0.3 || ^0.4",
        "friendsofphp/php-cs-fixer": "^3.4",
        "johnkary/phpunit-speedtrap": "^4.0",
        "marcocesarato/php-conventional-changelog": "^1.14",
        "mikey179/vfsstream": "^1.6",
        "mockery/mockery": "^1.3",
        "nyholm/nsa": "^1.3",
        "phly/keep-a-changelog": "^2.10",
        "phpbench/phpbench": "^1.1",
        "phpunit/phpunit": "^8.0|^9.0",
        "povils/phpmnd": "^2.5",
        "roave/security-advisories": "dev-latest",
        "symplify/monorepo-builder": "^10.0",
        "vimeo/psalm": "^4.16"
    },
    "conflict": {},
    "replace": {},
    "provide": {},
    "suggest": {},
    "autoload": {
        "psr-4": {
            "Guanguans\\PackageSkeleton\\": "src"
        },
        "psr-0": {},
        "files": [],
        "classmap": [],
        "exclude-from-classmap": [
            "benchmarks"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Guanguans\\PackageSkeletonTests\\": "tests"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [],
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "classmap-authoritative": true,
        "apcu-autoloader": true
    },
    "scripts": {
        "post-update-cmd": [
            "cghooks update"
        ],
        "post-merge": "composer install",
        "post-install-cmd": [
            "cghooks add --ignore-lock",
            "cghooks update"
        ],
        "benchmark": "./vendor/bin/phpbench run --retry-threshold=3 --iterations=15 --revs=1000 --warmup=2",
        "cghooks": "./vendor/bin/cghooks",
        "doctum": "./vendor/bin/doctum.php update doctum.php",
        "md-lint": "lint-md --config .lintmdrc ./*.md ./.github/ ./docs/",
        "md-fix": "lint-md --config .lintmdrc --fix ./*.md ./.github/ ./docs/",
        "paratest": "./vendor/bin/paratest -p4 --runner=WrapperRunner --coverage-text=coverage/coverage.text ./tests/ --verbose",
        "paratest-coverage": "./vendor/bin/paratest -p4 --runner=WrapperRunner --coverage-html=coverage/ --coverage-clover=clover.xml ./tests/ --verbose",
        "phpmnd": "./vendor/bin/phpmnd ./src/ --exclude=./vendor/ --non-zero-exit-on-violation",
        "psalm": "./vendor/bin/psalm",
        "release": "./vendor/bin/monorepo-builder release --ansi -vvv",
        "style-lint": "./vendor/bin/php-cs-fixer fix --using-cache=no --config=.php-cs-fixer.php --diff --dry-run --ansi",
        "style-fix": "./vendor/bin/php-cs-fixer fix --using-cache=no --config=.php-cs-fixer.php --ansi",
        "test": "./vendor/bin/phpunit --coverage-text --colors=always --cache-result-file=./build/.phpunit.result.cache --verbose",
        "test-coverage": "./vendor/bin/phpunit --coverage-html=./build/coverage/ --coverage-clover=./build/clover.xml --color=always --cache-result-file=./build/.phpunit.result.cache --verbose",
        "changelog": "./vendor/bin/conventional-changelog",
        "changelog-patch": "./vendor/bin/conventional-changelog --patch",
        "changelog-minor": "./vendor/bin/conventional-changelog --minor",
        "changelog-major": "./vendor/bin/conventional-changelog --major",
        "changelog-keep": "./vendor/bin/keep-a-changelog"
    },
    "scripts-descriptions": {},
    "extra": {
        "hooks": {
            "pre-commit": [
                "composer style-lint",
                "composer test"
            ],
            "pre-push": [
                "composer style-lint",
                "composer test"
            ]
        }
    },
    "bin": [],
    "archive": {},
    "abandoned": false,
    "non-feature-branches": [],
    "version": "1.0.7"
}
