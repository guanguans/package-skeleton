watch:
  directories:
    - src
    - tests
  exclude:
    - lib
  fileMask: '*.php'
  ignoreDotFiles: true
  ignoreVCS: true
  ignoreVCSIgnored: false

notifications:
  passingTests: false
  failingTests: false

phpunit:
  binaryPath: vendor/bin/pest
  # arguments: '--stop-on-failure'
  timeout: 180

hideManual: false
